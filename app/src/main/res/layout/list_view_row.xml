<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/list_view_thumbnail"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/list_view_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/list_view_thumbnail"
        android:paddingTop="3dp"
        android:text="NAME"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_view_address"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/list_view_name"
        android:layout_toRightOf="@+id/list_view_thumbnail"
        android:text="ADDRESS" />

    <TextView
        android:id="@+id/list_view_floorplans"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/list_view_address"
        android:layout_toRightOf="@+id/list_view_thumbnail"
        android:gravity="bottom"
        android:text="FLOORPLAN" />

    <TextView
        android:id="@+id/list_view_price_from"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/list_view_address"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/list_view_floorplans"
        android:gravity="bottom|right"
        android:text="price_from" />


</RelativeLayout>